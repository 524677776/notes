%% @doc @todo Add description to area_server0.


-module(area_server0).

%% ====================================================================
%% API functions
%% ====================================================================
-export([loop/0, rpc/2]).

rpc(Pid, Request)	->
	Pid ! {self(), Request},
	receive
		Response	->
			Response
	end


%% ====================================================================
%% Internal functions
%% ====================================================================

loop() ->
	receive
		{rectangle, Width, Ht}	->
			io:format("Area of rectangle is ~p~n", [Width * Ht]),
			loop();
		{square, Side}	->
			io:format("Area of square is ~p~n", [Side * Side]),
		loop()
	end.