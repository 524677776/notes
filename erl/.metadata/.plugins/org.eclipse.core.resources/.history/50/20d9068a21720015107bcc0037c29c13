%% @doc @todo Add description to lib_mlsc.


-module(lib_mlsc).

%% ====================================================================
%% API functions
%% ====================================================================
-export([qsort/1]).



%% ====================================================================
%% Internal functions
%% ====================================================================
qsort([]) -> [];
qsort([Pivot|T]) ->
	qsort([X || X <- T, X<Pivot])
	++ [Pivot] ++
	qsort([X|| X<- T, X >= Pivot]).

