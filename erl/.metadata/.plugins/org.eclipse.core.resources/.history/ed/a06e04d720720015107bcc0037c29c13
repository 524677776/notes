-module(shop1).

%% ====================================================================
%% API functions
%% ====================================================================
-export([[total/1]]).



%% ====================================================================
%% Internal functions
%% ====================================================================
total([{What, N} | T]) ->	shop:cost(What) * N + total(T);
total([]) ->0

