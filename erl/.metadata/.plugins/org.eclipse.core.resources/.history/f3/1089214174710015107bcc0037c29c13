-module(area_server0).

%% ====================================================================
%% API functions
%% ====================================================================
-export([loop/0]).



%% ====================================================================
%% Internal functions
%% ====================================================================

loop() ->
	receive
		{rectangle, Width, Ht}	->
			io:format("Area of rectangle is ~p~n", [Width * Ht]),
			loop();
		loop()
	end.